<h1>Listing funds</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Users</th>
    <th>Balance</th>
  </tr>

<% @funds.each do |fund| %>
  <tr>
    <td><%=h fund.account %></td>
    <td><%=h fund.users_id %></td>
    <td><%=h fund.balance %></td>
    <td><%= link_to 'Show', fund %></td>
    <td><%= link_to 'Edit', edit_fund_path(fund) %></td>
    <td><%= link_to 'Destroy', fund, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fund', new_fund_path %>